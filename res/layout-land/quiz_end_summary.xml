<LinearLayout android:id="@+id/quiz_end_root_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center">
		<TextView android:id="@+id/txt_end_of_quiz"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginBottom="30dip"
			android:text="@string/quiz_end_header"
			android:textSize="50dip" />

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/quiz_end_totals_relative_layout">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_marginRight="25dp">
			<TextView
				android:id="@+id/quiz_end_correct_header"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:gravity="center"
				android:text="@string/correct_answers_header" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:id="@+id/quiz_end_correct_number"
				android:text="1"
				android:textSize="30dip" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="25dp">	
			<TextView
				android:id="@+id/quiz_end_incorrect_header"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:gravity="center"
				android:text="@string/incorrect_answers_header" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/quiz_end_incorrect_number"
				android:gravity="center"
				android:text="1"
				android:textSize="30dip" />
		</LinearLayout>
	</LinearLayout>

	<Button	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/quiz_end_accept_button"
		android:layout_marginTop="30dip"
		android:text="@string/quiz_end_accept_button" />
</LinearLayout>